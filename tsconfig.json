{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2016", "es2017", "ES2018", "ES2019", "ES2020"],
    "target": "es2016",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
